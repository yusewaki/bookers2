<head>
  <script src="https://kit.fontawesome.com/f3cb8c7832.js" crossorigin="anonymous"></script>
</head>

<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "attachment user profile_image fallback" %>
  <table class="table">
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
	  </tr>
    <tr>
	    <th>introduction</th>
  	  <th><%= user.introduction %></th>
  	</tr>
  </table>

  <div class="row">
    <% if user.id == current_user.id %>
      <%= link_to edit_user_path(user) do %>
        <span class="btn btn-outline-secondary btn-block fas fa-user-cog"></span>
      <% end %>
    <% end %>
  </div>

　<h2 class="mt-3">New book</h2>
　<%= form_with model: book, local:true do |f| %>
　  <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class: "form-control book_title" %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <%= f.text_field :body, class: "form-control book_body" %>
    </div>
    <div class="form-group">
        <%= f.submit "Create Book", class: "btn btn-success" %>
    </div>
  <% end %>
</div>